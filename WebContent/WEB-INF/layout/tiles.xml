<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="base" template="/WEB-INF/layout/page.jsp">
		<put-attribute name="header" value="/WEB-INF/layout/header.jsp"></put-attribute>
		<put-attribute name="navigation" value="/WEB-INF/layout/navigation.jsp"></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/layout/footer.jsp"></put-attribute>
		
	</definition>
	
	<definition name="homepage" extends="base">
		<put-attribute name="content" value="/WEB-INF/views/homepage.jsp" />
	</definition>

	<definition name="contact" extends="base">
		<put-attribute name="content" value="/WEB-INF/views/contact.jsp"></put-attribute>
	</definition>
	
	<definition name="404" extends="base">
		<put-attribute name="content" value="/WEB-INF/views/error/404.jsp"></put-attribute>
	</definition>
</tiles-definitions>