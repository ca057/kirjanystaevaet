<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="base" template="/WEB-INF/layout/base.jsp">
		<put-attribute name="header" value="/WEB-INF/layout/header.jsp"></put-attribute>
		<put-attribute name="navigation" value="/WEB-INF/layout/navigation.jsp"></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/layout/footer.jsp"></put-attribute>
	</definition>
	
	<definition name="homepage" extends="base">
		<put-attribute name="content" value="/WEB-INF/views/homepage.jsp" />
	</definition>

	<definition name="contact" extends="base">
		<put-attribute name="content" value="/WEB-INF/views/contact.jsp"></put-attribute>
	</definition>

	<definition name="categories" extends="base">
		<put-attribute name="content" value="/WEB-INF/views/categories.jsp"></put-attribute>
	</definition>
	
	<definition name="search" extends="base">
		<put-attribute name="content" value="/WEB-INF/views/search.jsp"></put-attribute>
	</definition>
	
	<definition name="book" extends="base">
		<put-attribute name="content" value="/WEB-INF/views/book.jsp"></put-attribute>
	</definition>

	<definition name="login" extends="base">
		<put-attribute name="content" value="/WEB-INF/views/login.jsp"></put-attribute>
	</definition>

	<definition name="user" extends="base">
		<put-attribute name="content" value="/WEB-INF/views/user.jsp"></put-attribute>
	</definition>
	
	<definition name="cart" extends="base">
		<put-attribute name="content" value="/WEB-INF/views/cart.jsp"></put-attribute>
	</definition>
	
	<!-- views for the backend -->
	<definition name="backend" extends="base">
		<put-attribute name="content" value="/WEB-INF/views/backend/backend.jsp"></put-attribute>
	</definition>
	
	<!-- all views for displaying errors -->
	<definition name="404" extends="base">
		<put-attribute name="content" value="/WEB-INF/views/error/404.jsp"></put-attribute>
	</definition>
</tiles-definitions>